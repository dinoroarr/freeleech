typealias Tracker = "RHD" | "MTV" | "EMP"

class TrackerInfo {
    // Full name of the tracker
    name: String
    // Three letter short code
    code: Tracker
    // Official domain
    domain: String
}

class FIPermanent {
    // The short code of the tracker
    tracker: Tracker

    type: "permanent"
}

class FIRecurring {
    // The short code of the tracker
    tracker: Tracker

    type: "recurring"
    // RRule
    rrule: String
    // Timezone, optionally, by default UTC
    timeZone: String?
}

class FIOneTime {
    // The short code of the tracker
    tracker: Tracker

    type: "one-time"
    // ISO 8601
    time: String
    // Timezone, optionally, by default UTC
    timeZone: String?
}


